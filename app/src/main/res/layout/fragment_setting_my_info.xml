<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingMyInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/myInfo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="내 정보"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/myInfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/myInfo_tv"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_tv" />

            <ImageView
                android:id="@+id/myInfo_iv"
                android:layout_width="180dp"
                android:layout_height="280dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/galleryexp1"
                app:layout_constraintStart_toStartOf="@+id/myInfo_tv"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_name" />

            <TextView
                android:id="@+id/myInfo_bestArtwork_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대표작"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/myInfo_bestArtwork_iv"
                app:layout_constraintTop_toTopOf="@+id/myInfo_name"/>

            <ImageView
                android:id="@+id/myInfo_bestArtwork_iv"
                android:layout_width="180dp"
                android:layout_height="280dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:elevation="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/add"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/myInfo_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/myInfo_iv"
                app:layout_constraintTop_toTopOf="@+id/myInfo_iv" />


            <TextView
                android:id="@+id/myInfo_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="나이"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/myInfo_iv"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_iv" />

            <TextView
                android:id="@+id/myInfo_age_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="나이"
                app:layout_constraintStart_toStartOf="@+id/myInfo_age"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_age" />

            <TextView
                android:id="@+id/myInfo_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="학력"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/myInfo_age_input"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_age_input" />

            <TextView
                android:id="@+id/myInfo_school_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="학력"
                app:layout_constraintStart_toStartOf="@+id/myInfo_school"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_school" />

            <TextView
                android:id="@+id/myInfo_awards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="수상경력"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/myInfo_school_input"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_school_input" />


            <TextView
                android:id="@+id/myInfo_awards_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="수상경력"
                app:layout_constraintStart_toStartOf="@+id/myInfo_awards"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_awards" />

            <TextView
                android:id="@+id/myInfo_artwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="작품"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/myInfo_awards_input"
                app:layout_constraintTop_toBottomOf="@+id/myInfo_awards_input" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>