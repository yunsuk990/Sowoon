<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/gallery_tv"
        android:text="Gallery"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/gallery_sv"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/gallery_tv"
        app:layout_constraintTop_toBottomOf="@+id/gallery_tv"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="동양화"
                android:textColor="@color/black"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/scrollview_textview_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="서양화"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/scrollview_textview_off"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="서양화"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/scrollview_textview_off"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="서양화"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/scrollview_textview_off"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="서양화"
                android:paddingVertical="8dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/scrollview_textview_off"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </HorizontalScrollView>

    <GridView
        android:id="@+id/gallery_gv"
        android:numColumns="2"
        tools:listitem="@layout/item_artistgallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        app:layout_constraintTop_toBottomOf="@+id/gallery_sv"
        app:layout_constraintStart_toStartOf="@+id/gallery_sv"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>